import random
name = ""
question = "Am i going to be rich?"  
answer=""
random_number = random.randint(1,12)
if name=="":
 print("Question: " + question)
else:
  print(name + " asks: "+ question)


#Control Flow 
if random_number ==1:
  answer="Yes definetly"
elif random_number ==2:
  answer="It is decidely So"
elif random_number == 3: 
  answer="Without a doubt"
elif random_number == 4:
  answer="Replay hazy, try again"
elif random_number == 5:
  answer="Ask again later"
elif random_number == 6:
  answer="Better not tell you now"
elif random_number == 7:
  answer="My sources say no"
elif random_number ==8:
  answer="Outlook not so good"
elif random_number==9:
  answer="Very Doubtful"
elif random_number==10:
  answer="ehh probably not"
elif random_number==11:
  answer="You can do anything you set your mind to"
elif random_number==12:
  answer="idk but you have what it takes"
else:
  answer="Error"
if question=="":
  print("Please ask a question first")
else:
 print("Magic 8-Ball's answer: " 
+ answer)





